<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Pommidori" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red_primary</item>
        <item name="colorPrimaryVariant">@color/red_dark_primary</item>
        <item name="colorOnPrimary">@color/text_on_primary</item>
        <item name="colorPrimarySurface">@color/red_light_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/amber_secondary</item>
        <item name="colorSecondaryVariant">@color/amber_dark_secondary</item>
        <item name="colorOnSecondary">@color/text_on_secondary</item>
        <item name="colorOnSurface">@color/text_on_secondary</item>

        <item name="colorControlNormal">@color/red_primary</item>
        <item name="colorControlActivated">@color/red_dark_primary</item>
        <item name="colorControlHighlight">@color/red_light_primary</item>

        <!-- Status bar color.-->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

    </style>

    <style name="RatingBar" parent="Widget.AppCompat.RatingBar.Indicator">
        <item name="colorControlNormal">@color/red_light_primary</item>
        <item name="colorControlActivated">@color/amber_dark_secondary</item>
    </style>

    <style name="CircularDeterminateProgressBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/selector_circle_progress</item>
    </style>
</resources>