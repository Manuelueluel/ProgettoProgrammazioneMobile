<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Pommidori" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red_dark</item>
        <item name="colorPrimaryVariant">@color/red_dark_surface</item>
        <item name="colorOnPrimary">@color/white_pink</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/amber_secondary</item>
        <item name="colorSecondaryVariant">@color/amber_light_secondary</item>
        <item name="colorOnSecondary">@color/text_on_secondary</item>
        <item name="colorOnSurface">@color/white_pink</item>

        <item name="android:colorBackground">@color/red_almost_black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

    </style>
</resources>